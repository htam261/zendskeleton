<zend_config>
    <router>
        <routers>
            <home>
                <type>Zend\Mvc\Router\Http\Literal</type>
                <options>
                    <route>/</route>
                    <defaults>
                        <controller>Training\Controller\Index</controller>
                        <action>index</action>
                    </defaults>
                </options>
            </home>
            <training>
                <type>Literal</type>
                <options>
                    <route>/training</route>
                    <defaults>
                        <_NAMESPACE_>Training\Controller</_NAMESPACE_>
                        <controller>Index</controller>
                        <action>index</action>
                    </defaults>
                </options>
            </training>
            <may_terminate>true</may_terminate>
            <child_routes>
                <default>
                    <type>Segment</type>
                    <options>
                        <route>/[:controller[/:action]]</route>
                        <constraints>
                            <controller>[a-zA-Z][a-zA-Z0-9_-]*</controller>
                            <action>[a-zA-Z][a-zA-Z0-9_-]*</action>
                            <default/>
                        </constraints>
                    </options>
                </default>
            </child_routes>
        </routers>
    </router>
    <controllers>
        <invokables>
            <IndexController>Training/Index/IndexController</IndexController>
            <ConfigController>Training/Config/IndexController</ConfigController>
        </invokables>
    </controllers>
</zend_config>
